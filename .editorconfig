root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = false
max_line_length = 120
tab_width = 4

[*.vue]
indent_size = 4
tab_width = 4

[{*.ats,*.cts,*.mts,*.ts}]
indent_size = 4
indent_style = tab
tab_width = 4

[{*.cjs,*.js}]
indent_size = 4
indent_style = tab
tab_width = 4

[{*.har,*.jsb2,*.jsb3,*.json,*.jsonc,*.postman_collection,*.postman_collection.json,*.postman_environment,*.postman_environment.json,.babelrc,.eslintrc,.prettierrc,.stylelintrc,.ws-context,jest.config}]
indent_size = 4
indent_style = tab
tab_width = 4
